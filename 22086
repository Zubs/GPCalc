	<script>
		$('body').ready(function() {
			$('button').on('click', function(e) {
				e.preventDefault();
       			let final =  ($('#1 #unit').val() * $('#1 #grade').val() + $('#2 #unit').val() * $('#2 #grade').val() + $('#3 #unit').val() * $('#3 #grade').val() + $('#4 #unit').val() * $('#4 #grade').val() + $('#5 #unit').val() * $('#5 #grade').val() + $('#6 #unit').val() * $('#6 #grade').val() + $('#7 #unit').val() * $('#7 #grade').val() + $('#8 #unit').val() * $('#8 #grade').val() + $('#9 #unit').val() * $('#9 #grade').val() + $('#10 #unit').val() * $('#10 #grade').val()) / (parseInt($('#1 #unit').val()) + parseInt($('#2 #unit').val()) + parseInt($('#3 #unit').val()) + parseInt($('#4 #unit').val()) + parseInt($('#5 #unit').val()) + parseInt($('#6 #unit').val()) + parseInt($('#7 #unit').val()) + parseInt($('#8 #unit').val()) + parseInt($('#9 #unit').val()) + parseInt($('#10 #unit').val()));
       			final = final.toFixed(2);
       			$('#gp').text(`Your GP is ` + final)
			})
		})

	</script>
